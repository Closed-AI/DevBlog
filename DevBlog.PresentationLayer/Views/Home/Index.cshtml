@model List<ArticleViewModel>
<div class="container-sm">
    @foreach (var article in Model)
    {
        <article>
            <a href="/article/read/@article.Id">
                <h2>@article.Title</h2>
            </a>
            <div>
                <img src="~/images/@article.TitleImagePath">
            </div>
            <h3>@article.Subtitle</h3>
            <form asp-controller="Article" asp-action="Edit" method="get" enctype="multipart/form-data">
                <input type="hidden" value="@article.Id" name="Id" />
                <input type="submit" value="Редактировать" />
            </form>
            <form asp-controller="Article" asp-action="Delete" method="post" enctype="multipart/form-data">
                <input type="hidden" value="@article.Id" name="Id" />
                <input type="submit" value="Удалить" />
            </form>
        </article>
    }

    <div class="container-bottom">
        <form asp-controller="Article" asp-action="Add" method="get" enctype="multipart/form-data">
            <input type="submit" id="delegar" value="Создать новую статью">
        </form>
    </div>
</div>